<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewAsignaturas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:animateLayoutChanges="true"
    app:cardUseCompatPadding="true"
    android:backgroundTint="#59E356FB"
    android:background="@drawable/borde_text"
    android:orientation="horizontal"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">




        <LinearLayout
            android:id="@+id/linearCardAsignaturas"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/cardAsAsig"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="55"
                android:autoSizeMaxTextSize="25dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/fredoka"
                android:gravity="center"
                android:padding="4sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="PROGRAMACIÃ“N DE SERVICIOS Y PROCESOS"
                android:textAlignment="center"
                android:textColor="@color/textoPrincipal"

                />

            <TextView
                android:id="@+id/cardAsProfesor"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="45"
                android:autoSizeMaxTextSize="25dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/fredoka"
                android:gravity="center"
                android:padding="6sp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text="NEREIDA GONZALEZ"
                android:textAlignment="center"
                android:textColor="@color/textoPrincipal" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>