<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Aulas"
    android:id="@+id/frContacto"
    android:background="@drawable/fondo">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/neon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.2"
            android:src="@drawable/neon2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />


        <TextView
            android:id="@+id/tituloContacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/fredoka"
            android:gravity="center"
            android:text="CONTACTO"
            android:textSize="35dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/logoContacto"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/logo"
            app:layout_constraintTop_toBottomOf="@id/tituloContacto"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="-20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/linearTelefono"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="24dp"
            app:layout_constraintTop_toBottomOf="@id/logoContacto"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/telefono"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:fontFamily="@font/fredoka"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="917605485"
                android:textAlignment="center"
                android:textSize="24dp"
                tools:layout_editor_absoluteY="203dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/linearMail"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="24dp"
            app:layout_constraintTop_toBottomOf="@id/linearTelefono"
            android:layout_marginTop="32dp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/mail_contacto"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:fontFamily="@font/fredoka"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="contacto@xrv.com"
                android:textAlignment="center"
                android:textSize="24dp"
                tools:layout_editor_absoluteY="203dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/linearDirecciÃ³n"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="24dp"
            app:layout_constraintTop_toBottomOf="@id/linearMail"
            android:layout_marginTop="32dp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/casa_contacto"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:fontFamily="@font/fredoka"
                android:layout_marginLeft="20dp"
                android:text="Avda. del Saber 123, 28035 madrid"
                android:textAlignment="textStart"
                android:textSize="24dp"
                tools:layout_editor_absoluteY="203dp" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>