<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/tablaHorario"
    >

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/hrAsignatura"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="20dp"
        android:text="INGLES"
        android:fontFamily="@font/fredoka"
        android:textAlignment="center"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/hrHorario"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/borde_text"
        android:backgroundTint="#59E356FB"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/hrHorario"
        android:fontFamily="@font/fredoka"
        android:autoSizeTextType="uniform"
        android:text="9:00 - 10:00"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginRight="16dp"
        android:padding="10dp"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/hrAsignatura"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/borde_text"
        android:backgroundTint="#59E356FB"
        />


</androidx.constraintlayout.widget.ConstraintLayout>